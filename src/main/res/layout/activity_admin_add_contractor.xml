<!--                android:gravity="center_horizontal|center_vertical"-->
<!--                android:hint="Type Account"-->
<!--                android:inputType="text"-->
<!--                android:textColorHint="#808080"-->
<!--                />-->








            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pasword"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/a_type"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:id="@+id/txt_pasword"
                />

            <EditText
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/black"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:padding="5dip"
                android:background="@drawable/rounded_edittext"
                android:layout_centerInParent="true"
                android:layout_below="@id/txt_pasword"
                android:id="@+id/u_pasword"
                android:inputType="textPassword"
                android:hint="Type Pasword"
                android:textColorHint="#808080"
                />




            <Button
                android:layout_marginTop="30dp"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_done"
                android:text="Done"
                android:textColor="@color/white"
                android:background="@drawable/rounded_button"
                android:layout_below="@id/u_pasword"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"

                />


        </RelativeLayout>
    </ScrollView>